/* pages/cinemaMovie/cinemaMovie.wxss */
#container {
  width: 100%;
  height: auto;
  
}
/* 顶部红框 */
.top {
  font-size: 12px;
  color: #fff;
  line-height: 80rpx;
  text-align: center;
  width: 100%;
  height: 80rpx;
  background-color: #e56a69; 
}
/* 商品图片 */
.proimgarea {
  width: 100%;
  height: auto;
}
.proimg {
  margin: 0 auto;
  max-width: 100%;
  height: 460rpx;
}
/* 商品信息 */
.proinfo,
.guige {
  width: 94%;
  margin: 0 auto;
  padding: 20rpx 3%;
  height: auto;
}
/* 商品名字 */
.proname {
  box-sizing: border-box;
  line-height: 60rpx;
  height: 60rpx;
  color: #000;
  font-size: 16px;
  font-weight: bold;
}
/* 价格 */
.proprice {
  font-size: 14px;
  line-height: 60rpx;
  font-weight: bold;
}
/* 品牌，产地 */
.proinfo text {
    font-size: 12px;
    line-height: 22px;
    color: #ABABAB;
}
/* 商品颜色规格区域 */
.gg-title{
 font-size: 14px;
}
/* 颜色 */
.gg>view {
  width: 60rpx;
  height: 60rpx;
  margin:20rpx 0 0 26rpx;
  border: 1px solid #ccc;
  float:left;
}
.gg>view view {
  margin: 10rpx;
  height: 60rpx;
  width: 60rpx;
}
.gg .active{
  border: 1px solid #000;
}
/* 规格 */
.gg text{
  width:150rpx;
  height:70rpx;
  line-height:70rpx;
  float:left;
  background:#f2f2f2;
  text-align: center;
  margin:20rpx 0 0 26rpx;
  font-size:12px;
  border-radius: 5px;
}
#guigestyle  .active{
  color:#fff;
  background:#000;
}

/* 三张大图 */
.bigcolor {
  width: 100%;
  height: 450rpx;
}
.bigcolor image {
  max-width: 100%;
  height: 450rpx;
  background-size: 100%;
}
/* 底部固定购物车模块 */
.shopcararea {
  width: 100%;
  height: 120rpx;
  background-color: #F7F7F7;
  position: fixed;
  bottom: 0px;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  line-height: 120rpx;
  text-align: center;
  font-size: 14px;
}
.shopcararea view {
  width: 33%;
  align-items: center;
  
}
.shopcararea view:last-of-type {
  background-color: #1b1b1b;
  color: #fff;
}
.arealeft {
    width: 34%;
    display: flex;
    flex-direction: column;
    position: relative;
    border-right: 1px solid #ccc;
}
.arealeft image {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: 20rpx;
  left: 90rpx;
}
.arealeft text {
  display: block;
  font-size: 12px;
  color: 	#ABABAB;
  height: 60rpx;
  line-height: 60rpx;
  position: absolute;
  top: 66rpx;
  left: 76rpx;
}
/* 购物车商品数量 */
#shopcarnum {
  font-size: 12px;
  display: block;
  width: 40rpx;
  height: 40rpx;
  align-items: center;
  line-height: 40rpx;
  position: absolute;
  top: 10rpx;
  left: 150rpx;
  color: #fff;
  background-color: #e56a69;
  border-radius: 50%;
}



/*使屏幕变暗  */
.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}
/*弹出的选择框 */
.commodity_attr_box {
  width: 94%;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  padding:20rpx 3%;
}
