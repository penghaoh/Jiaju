/* pages/shopcar/shopcar.wxss */
#shopCar {
  height: auto;
  width: 100%;
  text-align: center;
  align-items: center;
}
/* 购物车无商品时 */
#shopCar .nopro {
  color:#ccc; 
  height: 460rpx;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #F7F7F7;
}
#shopCar .nopro image {
  width: 150rpx;
  height: 150rpx;
  margin-bottom: 20rpx;
}
/* 显示购物车列表 */
.top {
  height: 100rpx;
  border-bottom: 5px solid #F7F7F7;
  position: relative;
}
.emptycart {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  background-color: #f40;
  color:#fff;
  font-size: 14px;
  width: 140rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 10px;
}
/* 商品列表区域 */
.showList {
  display: block;
  width: 100%;
  height: auto;
  padding: 20rpx;
  border-bottom: 1px solid #F7F7F7;
}

/* 每一件商品 */
.showpro {
  width: 100%;
  padding: 20rpx;
  border-bottom: 1px solid #F7F7F7;
  height: 170rpx;
  display: flex;
  flex-direction: row;
  position: relative;
}
.showpro .icon {
  margin-top: 55rpx;
}
/* 左边商品图片 */
.showpro>image {
  width:170rpx;
  height:170rpx;
  border:1px solid #f5f5f5;
  margin: 0 30rpx;
}
/* 删除购物车商品*/
.delete {
  position: absolute;
  top: 20rpx;
  right: 80rpx;
}
.delete image {
  width: 50rpx;
  height: 50rpx;
}
/* 右边商品信息 */
.showpro .proinfo {
    width: 55%;
    display: flex;
    flex-direction: column;
    text-align: left;
    font-size: 14px;
}
/* 商品名称 */
.showpro .proinfo .proname {
  height: 50rpx;
}
/* 选择信息 */
.showpro .proinfo .color {
  height: 50rpx;
  line-height: 50rpx;
  font-size: 10px;
  color:#ccc;
  border-radius: 10rpx;
}
/* 右边商品底部信息 */
.showpro .proinfo .probottom {
  height: 70rpx;
  line-height: 70rpx;
  position: relative;
}
/* 价格 */
.proinfo .probottom .proprice {
  display: block;
  margin-top: 20rpx;
  color: #f40;
}
/* 数量增减框 */
.proinfo .probottom .stepper {  
  position: absolute;
  top: 0;
  right: 0;
  width: 80px;  
  height: 26px;  
  /*给主容器设一个边框*/  
  border: 1px solid #ccc;  
  border-radius: 3px;  
  margin:0 auto;  
}  
/*加号和减号*/  
.stepper text {  
    width: 19px;  
    line-height: 26px;  
    text-align: center;  
    float: left;  
}  
/*数值*/  
.stepper input {  
  padding:0px;
    width: 40px;  
    height: 26px;  
    float: left;  
    margin: 0 auto;  
    text-align: center;  
    font-size: 12px;  
    /*给中间的input设置左右边框即可*/  
    border-left: 1px solid #ccc;  
    border-right: 1px solid #ccc;  
}  
/*普通样式*/  
.stepper .normal{  
    color: black;  
}
/* 底部固定框 */
.fixbottom {
  position: fixed;
  bottom: 0;
  right: 0;
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  background-color: #F7F7F7;
  z-index: 999;
  font-size: 14px;
}
.fixbottom .total,
.fixbottom .settle {
  width: 35%;
  line-height: 100rpx;
}
/* 合计金额 */
.fixbottom .total {
  color: #f40;
}
/* 结算 */
.fixbottom .settle {
  background-color: #1b1b1b;
  color:#fff;
}
/* 全选 */
.fixbottom .checkbox {
  width: 30%;
  margin: 25rpx 0 0 40rpx;
  display: flex;
  flex-direction: row;
  white-space: nowrap;
}
.checkbox .cart-icon {
  margin-right: 20rpx;
}

